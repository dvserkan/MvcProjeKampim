@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategoriler Sayfası</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.AdminID</th>
            <td>@x.AdminUserName</td>
            <td>@x.AdminRole</td>
            <td>@x.AdminStatus</td>
            <td><a href="/Authorization/DeleteAdmin/@x.AdminID" class="btn btn-outline-danger">Pasif Yap</a></td>
            <td><a href="/Authorization/EditAdmin/@x.AdminID" class="btn btn-outline-success">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>
<a href="/Authorization/AddAdmin" class="btn btn-outline-secondary">Yeni Admin Tanımla</a>

<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.js"></script>

