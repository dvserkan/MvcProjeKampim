@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Başlık Güncelleme Sayfası</h1>
<br />
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.HeadingID, new { @class = "form-control" })
        @Html.HiddenFor(x => x.HeadingDate, new { @class = "form-control" })
        @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
        <br />
        @Html.Label("Başlık İsmi")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc,"Kategori Seçiniz...", new { @class = "form-control" })
        <br />
        <button class="btn btn-outline-success">Güncelle</button>
    </div>
}

